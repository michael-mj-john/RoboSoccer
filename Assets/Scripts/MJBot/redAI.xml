      <actionProperty componentName="RedAI" action="isNearBall" />
      <actionVoid componentName="RedAI" action="jumpUp" />
      <actionVoid componentName="RedAI" action="moveToMyGoal" />
    </sequence>
    <sequence>
      <actionProperty componentName="RedAI" action="ballNearMyGoal" />
      <actionVoid componentName="RedAI" action="moveToMyGoal" />
